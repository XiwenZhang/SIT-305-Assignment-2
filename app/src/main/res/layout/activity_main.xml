<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp"><![CDATA[
    >

    ]]>


    <Button
        android:id="@+id/Start"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="315dp"
        android:text="Start"
        android:textColor="#d1d1cc"
        android:onClick="StartIntent"
        android:background="@drawable/my_style"
        app:layout_constraintBottom_toTopOf="@+id/Scorelist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <Button
        android:id="@+id/Scorelist"
        android:textColor="#d1d1cc"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:text="Score List"
        android:onClick="ScoreList"
        app:layout_constraintBottom_toTopOf="@+id/Exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Start"
        android:background="@drawable/my_style"/>


    <Button
        android:id="@+id/Exit"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginBottom="42dp"
        android:text="Exit"
        android:onClick="Exit"
        android:textColor="#d1d1cc"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Scorelist"
        android:background="@drawable/my_style"/>
</android.support.constraint.ConstraintLayout>