<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <ListView
        android:id="@+id/socrelist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="153dp"
        android:layout_marginBottom="102dp"
        android:background="@drawable/board"
        android:divider="#FFFFE0"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toTopOf="@+id/listback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.178" />

    <Button
        android:id="@+id/de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:background="@drawable/my_style"
        android:text=" Clear "
        android:textColor="#d1d1cc"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listback" />

    <Button
        android:id="@+id/listback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="54dp"
        android:background="@drawable/my_style"
        android:text="Back"
        android:textColor="#d1d1cc"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/de"
        app:layout_constraintStart_toStartOf="@+id/de"
        app:layout_constraintTop_toBottomOf="@+id/socrelist" />
</android.support.constraint.ConstraintLayout>